@import "includes/vars.styl"
@import "includes/font.styl"


*
  display block
  box-sizing border-box
  transform translate3d(0, 0, 0)
  -webkit-transform-style preserve-3d
  -webkit-backface-visibility hidden
  -webkit-font-smoothing subpixel-antialiased
  user-select none !important
  touch-action none !important
  -webkit-tap-highlight-color rgba(255, 255, 255, 0) !important

body, html
  color $main-font-color
  background-color $color-dark
  height 100%
  width 100%
  margin 0
  padding 0
  overflow hidden

html
  font-size $main-size
  line-height 1.15
  -webkit-text-size-adjust 100%

body
  font-size 1rem

// main sections
div
  border 0px solid red
div.wrapper
  position relative
  height $main-height
  width $main-width
  margin 0
  padding 0
  border 0px solid $main-background
  display flex
  flex-direction column
  justify-content center
  align-items center
  text-align center
  div.overlay
    position: absolute
    top 73px
    left 0
    right 0
    font-weight 300
    text-align center
    color $color-white
  div.id-wrapper
    position: absolute
    right 11px
    top 106px
    div.poweredby
      font-size: 10px
      font-weight: 300
    div.oakos
      text-align center
      display inline-block
      margin-bottom: 5px
      img
        margin 0 auto
        opacity: 1

  div.header
    text-align center
    width 100%
    font-size 30px
    font-weight 400
    div.title
      font-size 131px
      line-height 1em
      color $color-medium
      margin-top: -21px;
      margin-bottom: -3px;
      letter-spacing: 0.05em;
    div.date{
      color $color-light
      font-weight 300
      background-color $color-medium
      padding 5px
      font-size 21px
      margin-bottom: 13px;
    }
  div.route
    width 100%
    flex-grow 1
    div.terminal
      color $color-medium
      font-weight 300
      font-size 48px
      line-height 1em
      text-transform uppercase
      background-color $color-medium-dark
      border-top .5px solid #f18571
      padding 5px
    div.destination
      color $color-light
      font-weight 300
      font-size 30px
      background-color $color-medium
      padding 5px
    div.times
      display flex
      justify-content center
      align-items: center 
      height 100%
      padding-top 20px
      div.boat
        flex 1
        display flex
        flex-direction column
        height 100%
        div.time
          font-size 55px
          font-weight 600
          color $color-medium
          &.current
            color $color-white
            font-size 70px
        div.status
          color $color-oak
          font-size 20px
            



